{% extends 'base-backend.html.twig' %}


{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            {# <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr> #}
        </tbody>
    </table>

    <a href="{{ path('app_admin_user_index') }}">Retour</a>

    <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}">Modifier</a>

    {{ include('admin_user/_delete_form.html.twig') }}
{% endblock %}
